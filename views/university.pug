extends layout

block content
  h1= title
    - let universities = results
    div(class="container-fluid")
      button.btn( class="btn-warning ml-1", onclick= destination) Create
    div(class="row m-1")
      each university,index in universities
       - let destination = `dispatch(\"/universities/update?id=${university._id}\")`
        div(class="col-sm-2 bg-success m-1 p-3" onclick=`buy(${index})`) #{university.University_Name} - #{university.University_Location} - #{university.Number_of_Courses_Offered}
          button.btn( class="btn-success ml-1", onclick= destination) Update
          button.btn( class="btn-danger ml-1", onclick= destination) Delete
          button.btn( class="btn-success ml-1", onclick= destination) Details
    script.
      function dispatch(path){
        window.location.href=path
      }
